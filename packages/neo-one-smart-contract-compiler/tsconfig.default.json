{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "lib": [
      "es2017",
      "es2017.object"
    ],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "strictFunctionTypes": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./node_modules/@neo-one/smart-contract"
    ]
  }
}
